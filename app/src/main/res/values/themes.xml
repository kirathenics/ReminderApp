<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ReminderApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
<!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
        <item name="android:statusBarColor">@color/lavender_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="popupMenuStyle">@style/CustomPopupMenu</item>
        <item name="android:itemTextAppearance">@style/TextAppearance</item>
    </style>

    <style name="Theme.ReminderApp" parent="Base.Theme.ReminderApp" />
    
    <style name="Theme.Navigation" parent="Base.Theme.ReminderApp">
        <item name="android:colorControlHighlight">@android:color/transparent</item>
    </style>

    <style name="ToolbarTitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/lavender_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/lavender_dark</item>
    </style>

    <style name="CardView.Background">
        <item name="android:background">@color/white</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">3sp</item>
    </style>

    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/lavender_medium</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@color/lavender_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomRadioButtonStyle" parent="Base.Theme.ReminderApp">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">4sp</item>
        <item name="android:paddingTop">8sp</item>
        <item name="android:background">@drawable/radio_button_background</item>
        <item name="android:drawableTint">@color/radio_button_drawable_color</item>
    </style>

    <style name="CustomDateTimePickerTheme" parent="Base.Theme.ReminderApp">
        <item name="colorAccent">@color/lavender_dark</item>
        <item name="android:colorAccent">@color/lavender_dark</item>
    </style>

    <style name="DialogButtonStyled" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/lavender_dark</item>
    </style>

    <style name="DayOfWeekCheckBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/day_selector</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textColor">@color/day_text_selector</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomCheckBoxStyle" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/checkbox_color_selector</item>
    </style>

    <style name="CustomDialogFragment" parent="Base.Theme.ReminderApp">
        <item name="background">@drawable/rounded_corner</item>
    </style>

    <style name="NumberPickerTheme" parent="Base.Theme.ReminderApp">
        <item name="colorControlNormal">@color/lavender_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomScrollBarStyle">
        <item name="android:scrollbarThumbHorizontal">@color/lavender_dark</item>
        <item name="android:scrollbarTrackHorizontal">@color/lavender_medium</item>
        <item name="android:scrollbarSize">4dp</item>
    </style>

    <style name="CustomImageButtonStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="tint">@color/lavender_dark</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>