<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reminder_card_view"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:layout_margin="8dp"
    style="@style/CardView.Background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/is_completed_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/reminder_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/is_completed_check_box"
            android:layout_marginTop="5sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="8sp"
            android:text="@string/title_reminder_name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!--        <ImageButton-->
        <!--            android:id="@+id/category_card_view_drag_handler"-->
        <!--            android:layout_width="30dp"-->
        <!--            android:layout_height="30dp"-->
        <!--            android:layout_alignParentEnd="true"-->
        <!--            android:layout_marginTop="8dp"-->
        <!--            android:layout_marginEnd="0dp"-->
        <!--            android:background="@drawable/ic_drag_handle"-->
        <!--            android:backgroundTint="@color/gray"-->
        <!--            android:contentDescription="@string/category_drag_handler" />-->

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/category_card_view_is_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/is_completed_check_box"
            android:layout_gravity="start"
            android:checked="false"
            android:elevation="20dp"
            android:padding="10dp"
            app:thumbTint="@color/switch_thumb_color"
            app:trackTint="@color/switch_track_color" />

        <ImageButton
            android:id="@+id/category_card_view_options"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_below="@+id/is_completed_check_box"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/ic_more_vert"
            android:backgroundTint="@color/gray"
            android:contentDescription="@string/title_category_options" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>